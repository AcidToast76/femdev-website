include ../defaults/mixins.pug
doctype html
html
  head
    +header()
    style.
      :root {
        --blue: rgba(0, 123, 255, 1);
        --danger-red: rgba(255, 0, 0, 1);
        --dark: #1b1b1d;
        --light: #f3f1f6;
      }

      .container *, #pdstitle {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 1.5rem;
        padding: 1rem;
        background: var(--light);
        color: var(--dark);
        /* min-height: 100dvh;
        min-width: 100%; */
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
        border: 0px;
      }
      .container *::before,  #pdstitle::before, .container *::after,  #pdstitle::after{
        content: '';
        display: none;
      }

      .container button {
        font-size: 2rem;
      }

      #pdstitle {
        color: var(--blue);
        text-align: center;
        line-height: 4rem;
      }

      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
      }

      .container #stats {
        text-align: center;
        background: white;
        padding: 0.5rem;
        border-radius: 10px;
      }

      .container #stats > * {
        margin: 0.25rem;
      }

      .container #map {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 75dvh;
        height: 52dvh;
        background-image: url(/assets/images/static/poland.png);
        background-size: cover;
        border: 5px solid black;
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        transition: background-image 0.3s;
      }

      .container #startButton,
      .container #destroyButton,
      .container #tryAgainButton {
        background-color: var(--blue);
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        margin-top: 10px;
        border-radius: 5px;
        transition: background-color 0.2s;
      }

      .container #gameOver {
        display: none;
        font-size: 2rem;
        color: white;
        background-color: red;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
      }

      .container #startButton {
        display: none;
      }

      .container #tryAgainButton {
        display: none;
        margin-top: 20px;
      }

      /* Pseudo-classes */
      .container #startButton:hover,
      .container #destroyButton:hover,
      .container #tryAgainButton:hover {
        background-color: #0056b3;
      }

      .container .countdown {
        font-size: 72px;
        color: #007bff;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }

      .container .notification {
        font-size: 24px;
        color: white;
        background-color: #007bff;
        padding: 10px 20px;
        border-radius: 5px;
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        z-index: 1;
        opacity: 0;
        animation: fade-in 0.3s forwards;
      }

      /* Media queries */
      @media (prefers-color-scheme: dark) {
        .container * {
          background: var(--dark);
          color: var(--light);
        }
        .container #stats {
          background: #2a2a2b;
        }
      }

      @media only screen and (max-width: 780px) {
        .container * {
          font-size: 1rem;
        }
        .container h1 {
          line-height: 2rem;
        }
      }

      /* effect shows up when destroy button is clicked */
      .container .destruction-effect {
        position: absolute;
        translate: 310% 150%;
        width: 200px;
        height: 200px;
        background-image: url(/assets/images/static/explosion.gif);
        background-size: cover;
        animation: explosion 2s linear;
      }

      /* Animations */
      @keyframes explosion {
        0% {
          transform: scale(1);
          opacity: 1;
        }
        100% {
          transform: scale(2.5);
          opacity: 0;
        }
      }

      @keyframes fade-in {
        to {
          opacity: 1;
        }
      }
  body.bg-neutral-200
    +nav()
    h1#pdstitle Poland Destruction Simulator
    .container
      #map 
        p#gameOver Game Over!
      button#startButton Start Game
      button#destroyButton Destroy!
      #stats
        p#score Score: 0
        p#timeLeft Time Left: 15
        p#personalBest Personal Best: 0
    script(src="https://cdn.thefemdevs.com/assets/js/fs/pds.js")
    +footer()
