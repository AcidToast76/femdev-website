include ../defaults/mixins.pug
doctype html
html(lang='en-us')
  head
    +header()
  body.bg-neutral-200
    +nav()
    content.flex.flex-col.items-center.justify-center
      hero.flex.w-full.max-w-6xl.flex-row.items-center.justify-between.p-8(class='md:my-16')
        .flex.w-full.flex-col.space-y-8
          .flex.w-full.flex-col.space-y-4
            h1.select-none.font-poppins.text-5xl.font-bold.text-neutral-900 Contributors
          .flex.w-full.flex-col.space-y-4
            h2.select-none.font-poppins.text-3xl.font-bold.text-neutral-900 The following people have contributed to the website
            for contributor in contributors
              h3.select-none.font-poppins.text-xl.text-neutral-900 #[a.font-bold(href=`https://github.com/${contributor.github}` target="_blank").text-cyan-700= contributor.name] - #{contributor.description}
    +footer()