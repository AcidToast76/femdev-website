doctype html
html(lang='en-us')
  include ../defaults/header.pug
  body.bg-neutral-200
    include ../defaults/nav.pug
    content.flex.flex-col.items-center.justify-center
      hero.flex.w-full.max-w-6xl.flex-row.items-center.justify-between.p-8(class='md:my-16')
        .flex.w-full.flex-col.space-y-8
          .flex.w-full.flex-col.space-y-4
            h1.select-none.font-poppins.text-5xl.font-bold.text-neutral-900 Security Policy
            h3.select-none.font-poppins.text-xl.text-neutral-900 Last Updated 11th Febuary 2024
          .flex.w-full.flex-col.space-y-4
            h2.select-none.font-poppins.text-3xl.font-bold.text-neutral-900 Supported Versions
            h3.select-none.font-poppins.text-xl.text-neutral-900 The following versions of the website have accepted security policies
            table.w-full.border.border-neutral-900
              thead
                tr
                  th.border.border-neutral-900 Version
                  th.border.border-neutral-900 Supported
              tbody
                tr
                  td.border.border-neutral-900 1.3.0
                  td.border.border-neutral-900 :white_check_mark:
                tr
                  td.border.border-neutral-900 < 1.3.0
                  td.border.border-neutral-900 :x:
          .flex.w-full.flex-col.space-y-4
            h2.select-none.font-poppins.text-3xl.font-bold.text-neutral-900 Reporting a Vulnerability
            h3.select-none.font-poppins.text-xl.text-neutral-900 To report a vunrability, please contact the administrative team at 
              a.font-bold(href="mailto:admin@thefemdevs.com" target="_blank").text-cyan-700 admin@thefemdevs.com
    include ../defaults/footer.pug