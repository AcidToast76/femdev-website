include ../mixins.pug
doctype html
html(lang='en-us')
	head
		+header()
	body.bg-neutral-200
		+nav()
		content.flex.flex-col.items-center.justify-center
			hero.flex.w-full.max-w-6xl.flex-row.items-center.justify-between.p-8(class='md:my-16')
				.flex.w-full.flex-col.space-y-8
					.flex.w-full.flex-col.space-y-4
						h1.select-none.font-poppins.text-5xl.font-bold.text-neutral-900 Security Policy
						p.select-none.font-poppins.text-xl.text-neutral-900 Last Updated 11th February 2024
					.flex.w-full.flex-col.space-y-4
						h2.select-none.font-poppins.text-3xl.font-bold.text-neutral-900 Supported Versions
						p.select-none.font-poppins.text-xl.text-neutral-900 The following versions of the website have accepted security policies
						table.w-full.border.border-neutral-900.border-collapse
							thead
								tr
									th.border.border-neutral-900 Version
									th.border.border-neutral-900 Supported
							tbody
								+support('3.0.0', true, 1)
								+support('3.0.0', false, 2)
					.flex.w-full.flex-col.space-y-4
						h2.select-none.font-poppins.text-3xl.font-bold.text-neutral-900 Reporting a Vulnerability
						p.select-none.font-poppins.text-xl.text-neutral-900.
							To report a vulnerability, please contact the administrative team at #[a.font-bold(href="mailto:admin@thefemdevs.com" target="_blank").text-cyan-700 admin@thefemdevs.com]
		+footer()